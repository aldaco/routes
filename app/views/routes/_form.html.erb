<%= form_for @route, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :station1_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :station1_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :station2_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :station2_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                routes_path, :class => 'btn' %>
  </div>
<% end %>
