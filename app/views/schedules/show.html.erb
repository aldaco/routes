<%- model_class = Schedule -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:sched_num) %>:</strong></dt>
  <dd><%= @schedule.sched_num %></dd>
  <dt><strong><%= model_class.human_attribute_name(:route_id) %>:</strong></dt>
  <dd><%= @schedule.route_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:etd) %>:</strong></dt>
  <dd><%= @schedule.etd %></dd>
  <dt><strong><%= model_class.human_attribute_name(:atd) %>:</strong></dt>
  <dd><%= @schedule.atd %></dd>
  <dt><strong><%= model_class.human_attribute_name(:eta) %>:</strong></dt>
  <dd><%= @schedule.eta %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ata) %>:</strong></dt>
  <dd><%= @schedule.ata %></dd>
  <dt><strong><%= model_class.human_attribute_name(:delay) %>:</strong></dt>
  <dd><%= @schedule.delay %></dd>
  <dt><strong><%= model_class.human_attribute_name(:canceled) %>:</strong></dt>
  <dd><%= @schedule.canceled %></dd>
  <dt><strong><%= model_class.human_attribute_name(:info) %>:</strong></dt>
  <dd><%= @schedule.info %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              schedules_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_schedule_path(@schedule), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              schedule_path(@schedule),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
